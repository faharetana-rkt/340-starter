<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="add-classification">
    <p>FIELD IS REQUIRED</p>
    <form action="/inv/addclass" method="post">
        <label for="class-name">First Name:</label>
        <small class="class-name-instructions">Names must be alphabetic characters only</small>
        <input type="text" name="classification_name" id="class-name" pattern="^[A-Za-z]+$" required value="<%= locals.account_firstname %>">
        <input type="submit" value="Add Classification">
    </form>
</div>